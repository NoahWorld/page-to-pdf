{
  "manifest_version": 3,
  "name": "One Click Page to PDF",
  "version": "0.1.0",
  "description": "Export the current tab as a PDF and download it with one click.",
  "action": {
    "default_title": "Export to PDF",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "downloads", "debugger", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
